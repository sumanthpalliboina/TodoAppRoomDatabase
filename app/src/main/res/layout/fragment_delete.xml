<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    android:background="@drawable/bottom_sheet_bg"
    android:backgroundTintMode="screen"
    android:backgroundTint="@color/white"
    tools:context=".fragments.DeleteFragment">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@drawable/bottom_sheet_line_bg"
            android:layout_width="60dp"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_height="3dp"/>
        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="end"
                android:src="@drawable/baseline_cancel_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textContainer"
            app:layout_constraintWidth_percent="0.2"
            android:id="@+id/myProfile"
            android:src="@drawable/sumanth_photo_qqqzsw"
            app:civ_border_width="2dp"
            android:layout_margin="10dp"
            app:civ_border_color="#000000"
            android:layout_width="0dp"
            android:layout_height="60dp"/>

        <LinearLayout
            android:layout_marginBottom="15dp"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/confirmationText"
            app:layout_constraintStart_toEndOf="@id/myProfile"
            android:id="@+id/textContainer"
            app:layout_constraintWidth_percent="0.7"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/myTitle"
                android:text="DSA With Java"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="25sp"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeStepGranularity="2sp"
                android:maxLines="2"
                android:ellipsize="end"
                style="@style/Font25spRobotoBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/myStatus"
                android:text="InProgress"
                style="@style/Font17spRobotoMediumBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/confirmationText"
            app:layout_constraintTop_toBottomOf="@id/myProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Do you want to delete this data?"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:maxLines="2"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/confirmationText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancel"
                android:layout_weight="0.5"
                android:layout_marginEnd="4dp"
                android:text="Cancel"
                android:background="@drawable/cancel_delete_bg"
                style="@style/Font17spRobotoMediumBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/delete"
                android:layout_marginStart="4dp"
                android:background="@drawable/delete_btn_bg"
                style="@style/Font17spRobotoMediumBold"
                android:textColor="@color/white"
                android:layout_weight="0.5"
                android:text="Delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>